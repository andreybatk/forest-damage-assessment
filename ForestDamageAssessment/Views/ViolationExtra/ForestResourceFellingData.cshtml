@using ForestDamageAssessment.BL.Interfaces;
@using ForestDamageAssessment.BL.Models;
@model ForestResourceData
@{
    ViewData["Title"] = "Расчет данных о насаждениях";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered border">
        <thead>
            <tr>
                <th>#</th>
                <th>Пни (куб. м)</th>
                <th>Ставка платы</th>
                <th>Кора деревьев и кустарников (т)</th>
                <th>Ставка платы</th>
                <th>Луб (т)</th>
                <th>Ставка платы</th>
                <th>Береста (т)</th>
                <th>Ставка платы</th>
                <th>Пихтовая лапа (т)</th>
                <th>Ставка платы</th>
                <th>Сосновая лапа (т)</th>
                <th>Ставка платы</th>
                <th>Еловая лапа (т)</th>
                <th>Ставка платы</th>
                <th>Хворост, веточный корм (куб. м)</th>
                <th>Ставка платы</th>
                <th>Мох, лесная подстилка, камыш, тростник (кг)</th>
                <th>Ставка платы</th>
                <th>Общий размер ущерба</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model?.ModelList?.Count; i++)
            {
                <tr>
                    <th>@(i + 1)</th>
                    <td>@String.Format("{0:f6}", @Model?.ModelList[i].Stumps)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].StumpsPrice)</td>
                    <td>@String.Format("{0:f6}", @Model?.ModelList[i].Bark)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].BarkPrice)</td>
                    <td>@String.Format("{0:f6}", @Model?.ModelList[i].Lub)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].LubPrice)</td>
                    <td>@String.Format("{0:f6}", @Model?.ModelList[i].BirchBark)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].BirchBarkPrice)</td>
                    <td>@String.Format("{0:f6}", @Model?.ModelList[i].FirPaw)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].FirPawPrice)</td>
                    <td>@String.Format("{0:f6}", @Model?.ModelList[i].PinePaw)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].PinePawPrice)</td>
                    <td>@String.Format("{0:f6}", @Model?.ModelList[i].SprucePaw)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].SprucePawPrice)</td>
                    <td>@String.Format("{0:f6}", @Model?.ModelList[i].Brushwood)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].BrushwoodPrice)</td>
                    <td>@String.Format("{0:f6}", @Model?.ModelList[i].ForestFloor)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].ForestFloorPrice)</td>
                    <td>@String.Format("{0:C2}", @Model?.ModelList[i].Money)</td>
                </tr>
            }
        </tbody>
        <tfoot class="table-dark">
            <tr>
                <td colspan="19">Итого по лесосеке</td>
                <td>@String.Format("{0:C2}", Model.TotalMoney)</td>
            </tr>
            @foreach (var item in Model.Coefficients)
            {
                <tr>
                    <td colspan="19">@item.Key</td>
                    <td>@String.Format("{0:C2}", @item.Value)</td>
                </tr>
            }
        </tfoot>
    </table>
</div>

<div class="form-text">
    <p>Вид нарушения (прил. @Model.ViolationArticle.AppendixNumber п. @Model.ViolationArticle.ArticleNumber):<br />@Model.ViolationArticle.Title</p>
    <p>Размер ущерба:<br />@Model.ViolationArticle.Punish</p>
    <p>Описание:<br />@Model.ViolationArticle.Description</p>
    <a class="link-secondary" href=" https: //base.garant.ru/72141810/">Постановление Правительства РФ №1730</a>
    <a class="link-secondary" href="https://base.garant.ru/12153804/b89690251be5277812a78962f6302560/">Постановление Правительства РФ №310</a>
</div>